{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Debug",
            "type": "shell",
            "command": "pipenv run scons build profile=debug profiling=true robot=TARGET_${input:robotType}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Build - Release",
            "type": "shell",
            "command": "pipenv run scons build robot=TARGET_${input:robotType}",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Flash - Debug",
            "type": "shell",
            "command": "pipenv run scons run profile=debug profiling=true robot=TARGET_${input:robotType}",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
        {
            "label": "Flash - Release",
            "type": "shell",
            "command": "pipenv run scons run robot=TARGET_${input:robotType}",
            "group": "build",
            "options": {
                "cwd": "${workspaceRoot}/ut-robomaster"
            }
        },
    ],
    "inputs": [
        {
            "id": "robotType",
            "description": "Robot Type:",
            "type": "pickString",
            "options": [
                "STANDARD",
                "HERO",
                "SENTRY"
            ],
            "default": "STANDARD"
        },
    ]
}